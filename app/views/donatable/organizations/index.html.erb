<% content_for :title do %>
    Search Orgs | Donatable
<% end %>

<% content_for :jumbotron do %>
    <div class="jumbotron">
        <div class="container">
          <h1 class="display-3">Search Organizations</h1>
          <p class="lead">
              <p>Our powerful search engine can search through full text, not just keywords. It also can make sense of many typos. Best of all, it's multilingual.
              <form class="form-group org_search">
                <input class="form-control col-lg-10 col-md-10 col-sm-12" id="search" name="search" type="text" placeholder="Type keywords here and click button below to search" aria-label="Search" />
                <button class="btn btn-secondary btn-block btn-lg" type="submit"><i class="fa fa-search"></i> Search</button>
              </form>
          </p>
        </div>
    </div>
<% end %>

<% content_for :main do %>
<div class="col-12 col-md-12 pull-md-12 bd-content">
    <p id="notice"><%= notice %></p>
        <table class="table">
          <thead class="thead-default">
            <tr>
                <th>Name</th>
                <th>Website</th>
                <th>Short description</th>
                <th>Tags</th>
            </tr>
          </thead>

          <tbody>
            <% @organizations.each do |organization| %>
              <tr>
                <td><%= link_to organization.name, organization_path(organization) %></td>
                <td><%= organization.website %></td>
                <td><%= organization.short_description %></td>
                <td><%= organization.tag_list %></td>
              </tr>
              <tr>
              </tr>
            <% end %>
          </tbody>
        </table>
</div>
<% end %>
